@{
    ViewData["Title"] = "Submit a Movie";
}

@model Mission4.Models.FormSubmission

<form method="post">

    <label asp-for="Category">Category: </label>
    <select asp-for="Category">
        <option>Action/Adventure</option>
        <option>Comedy</option>
        <option>Drama</option>
        <option>Family</option>
        <option>Horror/Suspense</option>
        <option>Miscellaneous</option>
        <option>Television</option>
        <option>VHS</option>
    </select><br />

    <label asp-for="Title">Title: </label>
    <input asp-for="Title" /><br />

    <label asp-for="Year">Year: </label>
    <input asp-for="Year" /><br />

    <label asp-for="Director">Director: </label>
    <input asp-for="Director" /><br />

    <label asp-for="Rating">Rating: </label>
    <select asp-for="Rating">
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select><br />

    <label asp-for="Edited">Was this edited?</label>
    <select>
        <option value=""></option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" /><br />

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" /><br />

    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>

</form>
